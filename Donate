      box-shadow: 0 0 8px rgba(0,0,0,0.1);
    }
    textarea {
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border-radius: 6px;
      border: 1px solid #ccc;
      margin-bottom: 10px;
      resize: vertical;
    }
    .btn {
      padding: 8px 15px;
      font-size: 15px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
    .btn-post {
      background-color: #27ae60;
      color: white;
    }
    .comment-box {
      background: #f0f0f0;
      margin-top: 15px;
      padding: 10px;
      border-radius: 6px;
      word-break: break-word;
      position: relative;
    }
    .comment-date {
      font-size: 12px;
      color: #777;
    }
    .comment-actions {
      margin-top: 8px;
      display: flex;
      gap: 10px;
      align-items: center;
    }
    .like-btn {
      background-color: #3498db;
      color: white;
    }
    .delete-btn {
      background-color: #e74c3c;
      color: white;
      font-weight: bold;
    }
    .like-count {
      font-weight: bold;
    }
    #adminLogin {
      margin-bottom: 15px;
      text-align: center;
    }
    #adminLogin input {
      padding: 8px;
